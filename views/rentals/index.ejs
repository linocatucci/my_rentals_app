<% include ../partials/header %>

    <div class='container'>
        <header class="jumbotron">
            <div class='container'>
                <h1>Welcome to Our Holiday Rentals page!</h1>
                <p>View our rented appartments and houses from all over the world</p>
                <p><a href="/rentals/new"><button class='btn btn-primary btn-large'>Add New rental!</button></a></p>
            </div>
        </header>
        <div class='row'>
            <div class='col-lg-12'>
                <h3>Our most popular Rentals</h3>
            </div>
        </div>

        <div class='row text-center' style='display:flex; flex-wrap:wrap;'>
            <% rentals.forEach(function(rental){ %>
                <div class='col-md-3 col-sm-6'>
                    <div class='thumbnail'>
                        <a href="/rentals/<%=rental._id %>"><img src="<%= rental.image %>"></a>
                        <div class='caption'>
                            <h4>
                                <%= rental.name %>
                            </h4>
                            <p><a href="/rentals/<%=rental.id%>" class="btn btn-primary" role="button">More Info</a></p>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <% include ../partials/footer %>